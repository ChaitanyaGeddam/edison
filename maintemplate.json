{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "EastUs"
        },
        "servicePrincipalClientId": {
            "metadata": {
                "description": "Client ID (used by cloudprovider)"
            },
            "type": "securestring"
        },
        "servicePrincipalClientSecret": {
            "metadata": {
                "description": "The Service Principal Client Secret."
            },
            "type": "securestring"
        }
    },
    "variables": {
        "iothubSettings": {
            "location": "[parameters('location')]",
            "iotHubName": "[concat('edisonhub',variables('suffix'))]",
            "d2cMessageRetentionInDaysPeriod": 1,
            "d2cPartitionCount": 2,
            "skuName": "F1",
            "capacityUnits": 1,
            "d2cConsumerGroupName": "cg1"
        },
        "apiVersion": {
            "iotHubApiVersion": "2016-02-03"
        },
        "storageBlobSettings": {
            "storageAccountName": "[concat('edisonstrgeacc',variables('suffix'))]",
            "location": "[parameters('location')]",
            "containerName": "logs",
            "storageType":"Standard_LRS"
        },
        "webSiteSettings": {
            "webAppHostingPlanName": "[concat('edisonwebplan',variables('suffix'))]",
            "location": "WestUS",
            "webAppSkuName1": "F1",
            "webAPI": "[concat('edisonWebAPI',variables('suffix'))]",
            "webApiPackageuri":"",
            "webAdmin":"[concat('edisonWebAdmin',variables('suffix'))]"
        },
        "CosmosDbSettings": {
            "databaseAccName": "[concat('edisondbacc',variables('suffix'))]",
            "location": "[parameters('location')]",
            "offerType": "Standard"
        },
        "kubenetesSettings":{
            "location": "[parameters('location')]",
            "resourceName": "[concat('cluster',variables('suffix'))]",
            "kubernetesVersion": "1.11.4",
            "enableRBAC": false,
            "dnsPrefix": "cluster",
            "enableHttpApplicationRouting": true,
            "enableOmsAgent": true,
            "workspaceName": "[variables('workspaceName')]",
            "omsWorkspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', variables('WorkspaceName'))]",
            "osDiskSizeGB": 1023,
            "agentCount": 1,
            "agentVMSize": "Standard_D2_v2",
            "osType": "Linux",
            "storageProfile": "ManagedDisks",
            "servicePrincipalClientId": "[parameters('servicePrincipalClientId')]",
            "servicePrincipalClientSecret": "[parameters('servicePrincipalClientSecret')]",
            "networkPlugin": "kubenet",
            "workspaceRegion": "East US",
            "omsSku": "standalone"
        },
        "baseUrl": "https://raw.githubusercontent.com/ChaitanyaGeddam/edison/master",
        "suffix": "[substring(uniqueString(resourceGroup().id), 0, 4)]",
        "workspaceName": "[concat('omsworkspace',variables('suffix'))]"
    },
    "resources": [
        {
            "name": "IotHub",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-02-01",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), '/nested/iothub.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "iotHubSettings": {
                        "value": "[variables('iotHubSettings')]"
                    },
                    "apiVersion": {
                        "value": "[variables('apiVersion')]"
                    }
                }
            }
        },
        {
            "name": "StorageBlob",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-02-01",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), '/nested/storageblob.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageBlobSettings": {
                        "value": "[variables('storageBlobSettings')]"
                    }
                }
            }
        },
        {
            "name": "Cosmosdb",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2016-02-01",
            "dependsOn": [],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('baseUrl'), '/nested/cosmosdb.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "CosmosDbSettings": {
                        "value": "[variables('CosmosDbSettings')]"
                    }
                }
            }
        },
        {
        "name": "WebAPI",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2016-02-01",
        "dependsOn": [],
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(variables('baseUrl'), '/nested/webapi-components.json')]",
                "contentVersion": "1.0.0.0"
            },
            "parameters": {
                "webSiteSettings": {
                    "value": "[variables('webSiteSettings')]"
                }
            }
        }
    },
    {
    "name": "WebAdmin",
    "type": "Microsoft.Resources/deployments",
    "apiVersion": "2016-02-01",
    "dependsOn": [],
    "properties": {
        "mode": "Incremental",
        "templateLink": {
            "uri": "[concat(variables('baseUrl'), '/nested/webadmin.json')]", 
            "contentVersion": "1.0.0.0"
        },
        "parameters": {
            "webSiteSettings": {
                "value": "[variables('webSiteSettings')]"
            }
        }
    }
},
{
    "name": "Kubernetes",
    "type": "Microsoft.Resources/deployments",
    "apiVersion": "2015-01-01",
    "dependsOn": [
        "IotHub"
    ],
    "properties": {
        "mode": "Incremental",
        "templateLink": {
            "uri": "[concat(variables('baseUrl'),'nested/kubernetes.json?token=AT3nZrXIiKuD_tkbPpUMTpLqELhh1LQXks5bvZOlwA%3D%3D')]",
            "contentVersion": "1.0.0.0"
        },
        "parameters": {
            "kubernetesSettings": {
                "value": "[variables('kubernetesSettings')]"
            }
        }
    }
}
    ]
}
